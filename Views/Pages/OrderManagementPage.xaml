<Page x:Class="PRN_Project_Coffee_Shop.Views.Pages.OrderManagementPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PRN_Project_Coffee_Shop.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="800"
      Title="Order Management">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/> <!-- Menu -->
            <ColumnDefinition Width="2*"/> <!-- Current Order -->
        </Grid.ColumnDefinitions>

        <!-- Menu Section -->
        <Grid Grid.Column="0" Margin="0,0,10,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Text="Menu" FontSize="18" FontWeight="Bold" Margin="5"/>
            <ListView x:Name="MenuListView" Grid.Row="1">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{Binding ProductName}" FontWeight="Bold" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Price, StringFormat={}{0:C}}" Grid.Column="1" Margin="10,0" VerticalAlignment="Center"/>
                            <Button Content="Add" Grid.Column="2" Click="AddToOrder_Click" CommandParameter="{Binding}"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>

        <!-- Current Order Section -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Current Order" FontSize="18" FontWeight="Bold" Margin="5"/>
            
            <DataGrid x:Name="OrderDataGrid" Grid.Row="1" AutoGenerateColumns="False" CanUserAddRows="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Item" Binding="{Binding Product.ProductName}" Width="*"/>
                    <DataGridTextColumn Header="Qty" Binding="{Binding Quantity}" Width="Auto"/>
                    <DataGridTextColumn Header="Price" Binding="{Binding Price, StringFormat={}{0:N0}}" Width="Auto"/>
                    <DataGridTemplateColumn Header="Total" Width="Auto">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding TotalPrice, StringFormat={}{0:N0}}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

            <StackPanel Grid.Row="2" Margin="0,10,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Table Number:" VerticalAlignment="Center"/>
                    <TextBox x:Name="TableNumberTextBox" Grid.Column="1" Margin="5,0"/>
                </Grid>
                <Grid Margin="0,5,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Customer Phone:" VerticalAlignment="Center"/>
                    <TextBox x:Name="CustomerPhoneTextBox" Grid.Column="1" Margin="5,0"/>
                </Grid>
                 <Grid Margin="0,5,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Promotion Code:" VerticalAlignment="Center"/>
                    <TextBox x:Name="PromotionCodeTextBox" Grid.Column="1" Margin="5,0"/>
                </Grid>
                <TextBlock x:Name="TotalAmountTextBlock" Text="Total: 0" FontSize="16" FontWeight="Bold" HorizontalAlignment="Right" Margin="0,10,5,0"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                    <Button x:Name="ConfirmOrderButton" Content="Confirm Order" Width="100" Margin="5" Click="ConfirmOrderButton_Click"/>
                    <Button x:Name="CancelOrderButton" Content="Cancel" Width="70" Margin="5" Click="CancelOrderButton_Click"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
